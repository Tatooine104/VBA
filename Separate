public sub Separate()
' Ищем последнюю строку
ПосСтрока = Range(Cells(ActiveCell.Row, ActiveCell.Column), Cells(1048765, ActiveCell.Column)).Fond("").Row - 1
' Определяем количество элементов 
Количество = ПосСтрока - ActiveCell.Row
' Получаем от юзера значение максимального количества элементов в одной части
Граница = InputBox("Укажите максимальное количество элементов")
' Получаем количество целых частей
Частей = Fix(Количество / Граница)
' Получаем количество элементов в одной части
Часть = Fix(Количество / Частей)
' Вычисляем остаток
Остаток = Количество - Часть * Частей
' Помещаем данные в массив
Массив = Range(Cells(ActiveCell.Row, ActiveCell.Column), Cells(ПоСтрока, ActiveCell.Column)
' Создаем массив для вставки данных
Dim Результат(Часть, 1) as string
' Переменная чтобы хранить значение для массива вставки и отсчет частей
Dim y as Long, j as long
' Присваеваем начальное значение 
y = 1
j = 1
' Перебираем элементы массива
for i = 1 to Количество 
    Результат(y, 1) = Массив(i, 1)
    y = y + 1
    if y = Часть then
        Range(Cells(ActiveCell.Row, ActiveCell.Column + j + 1), Cells(ActiveCell.Row + y, ActiveCell.Column + j + 1)) = Результат 
        j = j + 1
        ReDim Результат(Часть, 1) 
        y = 1
    end if
    if Остаток > 0
    if j = Частей and y = Остаток then
        Range(Cells(ActiveCell.Row, ActiveCell.Column + j + 2), Cells(ActiveCell.Row + Остаток, ActiveCell.Column + j + 2)) = Результат 
        Erase Массив, Результат 
        Msgbox("Разделено на " & Частей + 1 & ", по " & Часть & "/" & Остаток & " элементов в каждом")
        Exit sub
    end if
    end if
next i
Msgbox("Разделено на " & Частей & ", по " & Часть & " элементов в каждом") 
end sub
